{
  /**************/
  /*   Editor   */
  /**************/
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "never"
  },
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 12,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.fontFamily": "Iosevka",
  "editor.fontLigatures": true,
  "editor.fontSize": 17,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.lightbulb.enabled": "off",
  "editor.quickSuggestions": {
    "comments": false,
    "other": true,
    "strings": true
  },
  "editor.inlayHints.enabled": "on",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "editor.minimap.enabled": false,
  "editor.mouseWheelScrollSensitivity": 3,
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 8,
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.tabCompletion": "on",
  "editor.wordBasedSuggestions": "off",

  /***************/
  /*   Explorer  */
  /***************/
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand ": true,
  "explorer.fileNesting.patterns": { "*.tsx": "${capture}.tsx" },
  "explorer.openEditors.visible": 1,
  
  /*****************/
  /*   Languages   */
  /*****************/
  "go.autocompleteUnimportedPackages": true,
  "go.formatFlags": ["goimports"],
  "go.lintOnSave": "package",
  "go.testFlags": ["-v"],
  "go.testOnSave": true,
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.fontFamily": "Go Mono",
    "editor.formatOnSave": true
  },

  "[csharp]": {
    "editor.formatOnSave": false
  },

  "html.hover.documentation": false,
  "html.hover.references": false,
  // "html.suggest.html5": false,

  "javascript.validate.enable": false,
  "[javascript][typescript][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [80],
    "editor.suggest.showKeywords": false,
    "editor.suggestSelection": "recentlyUsed",
    "editor.tabSize": 2
  },

  "php.suggest.basic": false,
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.formatOnSave": true,
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?" // double click selects the whole PHP $variable
  },

    /****************/
  /*   Terminal   */
  /****************/
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "Iosevka",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 0.7,
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-noLogo"]
    },
    "Ubuntu-22.04 (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu-22.04"]
    }
  },
  "terminal.integrated.scrollback": 10000,

  /***********/
  /*   Misc  */
  /***********/
  "window.zoomLevel": -1,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.associations": {
    "*.module": "php",
    "*.inc": "php",
    "*.env": "properties"
  },
  "files.defaultLanguage": "{activeEditorLanguage}",
  "security.workspace.trust.untrustedFiles": "open",
  "search.exclude": {
    "**/.build": true,
    "**/.gh-pages": true,
    "**/bower_components": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "workbench.colorTheme": "GitHub Light Colorblind (Beta)",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": false,
  "workbench.editor.limit.value": 18,
  "workbench.startupEditor": "newUntitledFile",

  /******************/
  /*   Extensions   */
  /******************/
  "emmet.excludeLanguages": ["markdown"],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "twig": "html"
  },

  "git.confirmSync": false,
  "git.path": "\\wsl.localhost\\Ubuntu-22.04\\usr\bin\\git",

  "npm.packageManager": "npm",

  "spellright.documentTypes": ["markdown", "plaintext", "mdx", "md"],
  "spellright.language": ["en"],
  "spellright.parserByClass": {
    "mdx": {
      "parser": "markdown"
    }
  },

  /*************/
  /*   Latex   */
  /*************/
  "[latex]": {
    "editor.rulers": [80]
  },
  "latex-workshop.latex.tools": [
    {
      "name": "lualatex",
      "command": "lualatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "lualatex",
      "tools": ["lualatex"]
    }
  ],

  /*************************/
  /*   Computer Specific   */
  /*************************/
