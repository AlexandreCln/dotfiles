{
  "workbench.activityBar.visible": true,
    "explorer.compactFolders": false,
  
    /*-------*/
    /*  PHP  */
    /*-------*/
    "files.associations": { 
        "*.module": "php",
        "*.env": "properties"
    },
    "php.suggest.basic": false,
    "intelephense.files.associations": [
      "*.php",
      "*.phtml"
    ],
    "intelephense.files.exclude": [
      "**/.git/**",
      "**/.svn/**",
      "**/.hg/**",
      "**/CVS/**",
      "**/.DS_Store/**",
      "**/node_modules/**",
      "**/bower_components/**",
      "**/vendor/**/{Test,test,Tests,tests}/**/*Test.php"
    ],
    "[php]": {
      "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
      "editor.formatOnSave": true,
      "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
    },
  
    /*----------*/
    /*  Vue.js  */
    /*----------*/
    "prettier.printWidth": 120,
    "prettier.tabWidth": 2,
    "prettier.singleQuote": true,
    "prettier.useTabs": true,
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2
    },
    "[vue]": {
      "editor.defaultFormatter": "octref.vetur",
      "editor.formatOnSave": false,
      "editor.tabSize": 2
    },
    // Turn off Vetur's linting feature, to use ESLint and Prettier 
    "vetur.validation.template": false,
    "vetur.ignoreProjectWarning": true,
    // Disable vetur snippets to avoid conflicts with Vue VSCode Snippets
    "vetur.completion.scaffoldSnippetSources": {
      "workspace": "",
      "user": "",
      "vetur": ""
    },
    "eslint.validate": [
      "vue",
      "html",
      "javascript"
    ],
    "editor.tabCompletion": "on", 
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    },
    "editor.quickSuggestions": {
      "comments": false,
      "strings": true,
      "other": true
    },
    "html.hover.documentation": false,
    "html.hover.references": false,
    "diffEditor.ignoreTrimWhitespace": false,

    /*--------------*/
    /*  Extensions  */
    /*--------------*/
    "liveServer.settings.port": 5500,
    "liveServer.settings.CustomBrowser": "firefox",
  
    /*---------*/
    /*  Other  */
    /*---------*/
    "workbench.startupEditor": "newUntitledFile",
    "emmet.includeLanguages": {
      "twig": "html",
      "javascript": "javascriptreact"
    },
    "emmet.excludeLanguages": [
      "markdown"
    ],
    "vetur.format.defaultFormatterOptions": {
  
      "js-beautify-html": {
        "wrap_attributes": "force-expand-multiline"
      },
      "prettyhtml": {
        "printWidth": 100,
        "singleQuote": false,
        "wrapAttributes": false,
        "sortAttributes": false
      }
    },
    "update.mode": "manual",
    "html.suggest.html5": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,

    /*------------*/
    /*  Terminal  */
    /*------------*/
    "terminal.integrated.profiles.windows": {
      "PowerShell": {
          "source": "PowerShell",
          "args": ["-noLogo"]
      }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontFamily": "Hasklug Nerd Font, Jetbrains Mono",
    "terminal.integrated.lineHeight": 1,
    "liveServer.settings.donotShowInfoMsg": true,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "Nord Deep",
  }
