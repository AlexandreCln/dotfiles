{
  /********************/
  /*   File Editing   */
  /********************/
  "editor.fontFamily": "JetBrains Mono, Consolas",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "phase",
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": false
  },
  "editor.quickSuggestions": {
    "comments": false,
    "strings": true,
    "other": true
  },
  "editor.lightbulb.enabled": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.formatOnPaste": false,
  "editor.smoothScrolling": true,
  "[javascript][typescript][typescriptreact]": {
    "editor.rulers": [80],
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false,
    "editor.tabSize": 2
  },
  "javascript.validate.enable": false,
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.formatOnSave": true,
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?", // double click selects the whole PHP $variable
  },
  "php.suggest.basic": false,
  "[csharp]": {
    "editor.formatOnSave": false
  },
  "[go]": {
    "editor.fontFamily": "Go Mono",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "go.testOnSave": true,
  "go.lintOnSave": "package",
  "go.formatFlags": ["goimports"],
  "go.testFlags": ["-v"],
  "go.autocompleteUnimportedPackages": true,
  // "html.suggest.html5": false,

  /*****************/
  /*   Workbench   */
  /*****************/
  "explorer.openEditors.visible": 0,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },
  "files.defaultLanguage": "{activeEditorLanguage}",
  "files.associations": {
    "*.module": "php",
    "*.inc": "php",
    "*.env": "properties"
  },
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "7lou Theme",
  "workbench.activityBar.visible": true,
  "workbench.sideBar.location": "right",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": false,
  "workbench.editor.limit.value": 18,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand ": true,
  "explorer.fileNesting.patterns": { "*.tsx": "${capture}.tsx" },
  // "update.mode": "manual",

  /******************/
  /*   Extensions   */
  /******************/
  "html.hover.documentation": false,
  "html.hover.references": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "emmet.includeLanguages": {
    "twig": "html",
    "javascript": "javascriptreact"
  },
  "emmet.excludeLanguages": ["markdown"],
  "git.confirmSync": false,
  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown", "plaintext", "mdx", "md"],
  "spellright.parserByClass": {
    "mdx": {
      "parser": "markdown"
    }
  },
  "npm.packageManager": "npm",

  /****************/
  /*   Terminal   */
  /****************/
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": ["-noLogo"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font, Jetbrains Mono, Consolas",
  "terminal.integrated.lineHeight": 0.7,
  "terminal.integrated.scrollback": 10000,
  "window.zoomLevel": -1

  /***************************/
  /*   Automatically added   */
  /***************************/
}
